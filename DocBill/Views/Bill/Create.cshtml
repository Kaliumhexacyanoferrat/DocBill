<section class="content">

    <form id="editor" method="post" action=".">

        <div class="row row-margin">

            <div class="col-md-6">

                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Allgemein</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-group row">
                            <label for="number" class="col-sm-3 col-form-label">Rechnungssteller</label>
                            <div class="col-sm-9">
                                <div class="form-control">
                                    @Model.Data.Name
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="title" class="col-sm-3 col-form-label">Rechnungsnummer</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="number" name="number" placeholder="0123456">
                            </div>
                        </div>

                    </div>

                </div>

            </div>

            <div class="col-md-6">

                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Zahlung</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-group row">
                            <label for="title" class="col-sm-3 col-form-label">Fällig am</label>
                            <div class="col-sm-9">
                                <input type="date" class="form-control" id="dueDate" name="dueDate">
                            </div>
                        </div>
                    
                    </div>

                </div>

            </div>

        </div>

        <div class="row justify-content-end">

            <div class="col-auto">
                <button class="btn btn-block btn-primary">Speichern</button>
            </div>

            <div class="col-auto">
                <a href="../../issuers/details/@Model.Data.ID/" class="btn btn-block btn-outline-primary">Abbrechen</a>
            </div>

        </div>

    </form>

</section>
