<section class="content">

    <div class="row row-margin justify-content-end">

        <div class="col-auto">
            <a href="../../edit/@Model.Data.ID/" class="btn btn-block btn-outline-primary">Bearbeiten</a>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">

            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">Allgemein</h3>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        <label for="number" class="col-sm-3 col-form-label">Rechnungssteller</label>
                        <div class="col-sm-9 form-control">
                            <a href="/issuers/details/@Model.Data.Issuer.ID/">
                                @Model.Data.Issuer.Name
                            </a>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="title" class="col-sm-3 col-form-label">Rechnungsnummer</label>
                        <div class="col-sm-9">
                            <div class="col-sm-9 form-control">@Model.Data.Number</div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="col-md-6">

            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">Zahlung</h3>
                </div>

                <div class="card-body">


                    <div class="form-group row">
                        <label for="title" class="col-sm-3 col-form-label">Fällig am</label>
                        <div class="col-sm-9">
                            <div class="col-sm-9 form-control">@Model.Data.DueDate.ToShortDateString()</div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="status" class="col-sm-3 col-form-label">Status</label>
                        <div class="col-sm-9 form-control">
                            @{
                                switch ((int)Model.Data.Status)
                                {
                                    case 0:
                                        <span class="badge badge-info">Offen</span>
                                        break;
                                    case 1:
                                        <span class="badge badge-primary">Abgeschlossen</span>
                                        break;
                                }
                            }
                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</section>

